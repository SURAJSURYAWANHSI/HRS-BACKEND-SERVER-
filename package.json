{
    "name": "admin-protrack",
    "description": "Admin ProTrack Desktop Application",
    "author": "User",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "main": "dist-electron/main.js",
    "scripts": {
        "start": "node server.cjs",
        "dev": "vite",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
        "build": "tsc && vite build && electron-builder",
        "preview": "vite preview",
        "server": "node server.cjs"
    },
    "dependencies": {
        "@capacitor/android": "^8.0.1",
        "@capacitor/app": "^8.0.0",
        "@capacitor/cli": "^8.0.1",
        "@capacitor/core": "^8.0.1",
        "@capacitor/local-notifications": "^8.0.0",
        "@capacitor/push-notifications": "^8.0.0",
        "@google/genai": "^1.35.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "firebase-admin": "^13.6.0",
        "framer-motion": "^12.31.0",
        "imap-simple": "^5.1.0",
        "lucide-react": "^0.562.0",
        "mailparser": "^3.9.3",
        "nodemailer": "^8.0.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-is": "^19.2.3",
        "recharts": "^3.6.0",
        "sequelize": "^6.37.5",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.3",
        "sqlite3": "^5.1.7",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@types/node": "^22.14.0",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.0.0",
        "concurrently": "^9.2.1",
        "electron": "^40.0.0",
        "electron-builder": "^26.4.0",
        "typescript": "~5.8.2",
        "vite": "^6.2.0",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6",
        "wait-on": "^9.0.3"
    },
    "build": {
        "appId": "com.protrack.admin",
        "productName": "ProTrack Admin",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "server.cjs",
            "database.sqlite"
        ],
        "win": {
            "target": "nsis",
            "artifactName": "${productName}_${version}.${ext}",
            "verifyUpdateCodeSignature": false,
            "icon": "ADMIN_ICON.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false
        },
        "forceCodeSigning": false
    }
}
